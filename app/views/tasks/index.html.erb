<h1>Task List</h1>

  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>View</th>
      </tr>
    </thead>
    <tbody>
    <!-- Iterate through the database for each td field-->
      <div id="tasks">
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.description %></td>
            <td><%= link_to 'Show this task', task, class: "btn btn-dark" %></td>
          </tr>
        <% end %>
      </div>
  </tbody>
</table>
<!-- Link to the new task page - presented as a button -->
<%= link_to "New task", new_task_path, class: "btn btn-dark" %>
